<h2><%= @restaurant.name  %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>

<p> <%= link_to "Delete #{@restaurant.name}",
            restaurant_path(@restaurant),
            method: :delete,
            data: { confirm: "Are you sure?" } %> </p>
<p>To leave a review, <%= link_to 'click here', new_restaurant_review_path(@restaurant) %></p>
<p>To edit restaurant, <%= link_to 'click here', edit_restaurant_path %></p>
<p>To go back to home, <%= link_to 'click here', restaurants_path %></p>
